@model LLVG20240907.DTOs.ProductsDTOs.SearchResultProductLLVGDTO

@{
    ViewData["Title"] = "Productos";
    var modelSearchQuery = ViewBag.SearchQuery as SearchQueryProductLLVGDTO;
}

<div class="container mt-5">
    <!-- Include partial views for search query and search results -->
    <partial name="SearchQuery" model="modelSearchQuery" />
    <partial name="SearchResult" model="Model" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Productos</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Crear Nuevo
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lista de Productos</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nombre del Producto</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreLLVG)</td>
                            <td class="text-center">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a class="btn btn-outline-info btn-sm ms-2" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a class="btn btn-outline-danger btn-sm ms-2" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Bootstrap Icons for action buttons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
