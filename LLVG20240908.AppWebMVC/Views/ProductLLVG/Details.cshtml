@model LLVG20240907.DTOs.ProductsDTOs.GetIdResultProductLLVGDTO

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Detalles del Producto</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NombreLLVG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreLLVG)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DescripcionLLVG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DescripcionLLVG)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PrecioLLVG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PrecioLLVG)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" class="btn btn-warning btn-lg">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Bootstrap Icons for action buttons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
