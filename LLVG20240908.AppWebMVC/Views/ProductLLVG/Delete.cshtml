@model LLVG20240907.DTOs.ProductsDTOs.GetIdResultProductLLVGDTO

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Eliminar Producto</h5>
        </div>
        <div class="card-body">
            <h3 class="mb-4">¿Estás seguro de querer eliminar este producto?</h3>

            <dl class="row mb-4">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NombreLLVG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreLLVG)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DescripcionLLVG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DescripcionLLVG)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PrecioLLVG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PrecioLLVG)
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <form asp-action="Delete" method="post">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Bootstrap Icons for form buttons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
